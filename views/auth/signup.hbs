<h2> Sign Up </h2>


<form action="/auth/signup" method="post" enctype="multipart/form-data">
    <div>
        <label for=''>Picture</label>
        <label class="custom-file-upload">
            <input id="up-image" type="file" name='profilepic'>
            <span>Upload pic</span>
        </label>

    </div>
    <div>
        <label for="name-input"> Name </label>
        <input type="text" name="name" id="name-input" placeholder="e.g., Diana Prince">
    </div>

    <div>
        <label for="email-input"> Email </label>
        <input type="email" name="email" id="email-input" placeholder="e.g., diana@themyscira.agency">
    </div>

    <div>
        <label for="password-input"> Password </label>
        <input type="password" name="password" id="password-input" placeholder="e.g., ••••••••••••">
    </div>
    <label for=''>Bio</label>
    <input type='text' name='bio' placeholder="catch phrase ">

    <button type="submit"> Create New Account </button>
</form>

<p>
    Already have an account?
    <a href="/auth/login">
        Log in.
    </a>
</p>

{{#if errorMessage}}
<p class="error-message">
    {{ errorMessage }}
</p>
{{/if}}